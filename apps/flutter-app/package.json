{
  "name": "flutter-app",
  "version": "1.0.0",
  "description": "Flutter implementation of Conway's game of life",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "scripts": {
    "test": "flutter test",
    "dev": "flutter run -d chrome --web-renderer canvaskit",
    "build": "flutter build web --web-renderer canvaskit",
    "clean": "flutter clean",
    "preview": "npx vite preview --outDir build/web/",
    "install:lib": "nx build core && ln -sf $(realpath ../../libs/core/dist/bundle/) web/dist"
  },
